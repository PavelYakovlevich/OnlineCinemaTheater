{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "SerilogConfiguration": {
    "LogsPath": "logs",
    "LogFileName": "log.txt",
    "FileSizeLimitBytes": 10485760,
    "RetainedFileCountLimit": 2,
    "RollOnFileSizeLimit": true,
    "Shared": true,
    "RollingInterval": "Day"
  }
}
